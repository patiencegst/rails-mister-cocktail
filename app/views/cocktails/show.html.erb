<h1><%= @cocktail.name %> </h1>

<% @cocktail.doses.each do |dose| %>
<p> <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), method: :delete do %>
        <i class="fa fa-trash"></i>
  <% end %>
</p>
<% end %>




<p> <%= link_to 'Back to List', cocktails_path %> <%= link_to " Add a dose", new_cocktail_dose_path(@cocktail) %></p>



